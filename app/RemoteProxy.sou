<!-- ====================================================== -->
<!-- Class: RemoteProxy -->
<!-- ====================================================== -->

<class>
<name>RemoteProxy</name>
<environment>Smalltalk</environment>
<super>Core.Object</super>
<private>false</private>
<indexed-type>none</indexed-type>
<inst-vars>remoteHost remotePort objectId </inst-vars>
<class-inst-vars></class-inst-vars>
<imports></imports>
<category>RemoteProxyPkg</category>
<attributes>
<package>RemoteProxyPkg</package>
</attributes>
</class>

<comment>
<class-id>RemoteProxy</class-id>
<body>
RemoteProxy acts as a local stand-in for a remote object, intercepting messages and simulating remote invocation.
</body>
</comment>

<!-- ====================================================== -->
<!-- Instance-side methods -->
<!-- ====================================================== -->

<methods>
<class-id>RemoteProxy</class-id> <category>initialization</category>

<body package="RemoteProxyPkg" selector="initializeWithHost:port:objectId:">initializeWithHost: host port: port objectId: objId
	remoteHost := host.
	remotePort := port.
	objectId := objId.
	^ self
</body>
</methods>

<methods>
<class-id>RemoteProxy</class-id> <category>message forwarding</category>

<body package="RemoteProxyPkg" selector="doesNotUnderstand:">doesNotUnderstand: aMessage
	| simulatedResponse |
	Transcript
		cr;
		show: '--- Proxy Intercept ---'; cr;
		show: 'Host: ', remoteHost asString, ' Port: ', remotePort asString; cr;
		show: 'Object ID: ', objectId asString; cr;
		show: 'Message: ', aMessage printString; cr.
	simulatedResponse := 'Simulated remote result for: ', aMessage selector asString.
	^ simulatedResponse
</body>
</methods>

<!-- ====================================================== -->
<!-- Class-side methods -->
<!-- ====================================================== -->

<methods>
<class-id>RemoteProxy</class-id> <category>instance creation</category>

<body package="RemoteProxyPkg" selector="proxyForHost:port:objectId:">proxyForHost: host port: port objectId: objId
	^ self new initializeWithHost: host port: port objectId: objId
</body>
</methods>

